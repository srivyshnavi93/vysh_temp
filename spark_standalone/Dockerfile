ARG SPARK_VERSION=3.3.1

FROM apache/spark-py:v${SPARK_VERSION}

USER 0
RUN apt-get update && apt-get install -y curl git wget nano sudo

ENV SPARK_MASTER_HOST spark-master
ENV SPARK_MASTER_PORT 7077

ARG SPARK_MASTER_WEB_UI=8080
ARG SPARK_WORKER_WEB_UI=8081
ARG SPARK_HISTORY_SERVER_WEB_UI=18080
ARG JUPYTER_LAB_WEB_UI=8888

EXPOSE ${SPARK_MASTER_WEB_UI} ${SPARK_MASTER_PORT} ${SPARK_WORKER_WEB_UI} ${SPARK_HISTORY_SERVER_WEB_UI}

COPY requirements.txt /
COPY conf /opt/spark/conf

WORKDIR ${SPARK_HOME}